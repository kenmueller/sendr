{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint", "prettier"],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier",
		"prettier/prettier"
	],
	"rules": {
		"@typescript-eslint/explicit-module-boundary-types": 0,
		"no-throw-literal": 2
	}
}
